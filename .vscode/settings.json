{
  // Stylelint
  "stylelint.validate": ["css", "postcss", "scss"],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  // Code Spell Checker
  "cSpell.words": [
    "msapplication",
    "noindex",
    "preconnect",
    "stylelint",
    "pnpm"
  ],
  "cSpell.ignorePaths": [
    "node_modules",
    ".vscode",
    ".prettierignore",
    ".prettierrc.json",
    ".stylelintrc.json",
    "package.json",
    "next.config.js",
    ".env.local",
    "pnpm-lock.yaml"
  ],

  // Peacock
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#4d4688",
    "activityBar.activeBorder": "#2a1816",
    "activityBar.background": "#4d4688",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#2a1816",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#3a3566",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#3a356699",
    "titleBar.inactiveForeground": "#e7e7e799",
    "sash.hoverBorder": "#4d4688"
  },
  "peacock.color": "#3a3566"
}
